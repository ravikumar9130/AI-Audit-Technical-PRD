# CPU-only worker: runs on Mac and any host without NVIDIA GPU.
# Use this when Dockerfile.worker (CUDA) does not build or run.
FROM python:3.11-slim

WORKDIR /app

ENV DEBIAN_FRONTEND=noninteractive
ENV PYTHONPATH=/app
ENV USE_CPU_LLM=1

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    ffmpeg \
    libsndfile1 \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

COPY requirements-worker.txt .
RUN pip install --no-cache-dir --upgrade pip setuptools wheel \
    && pip install --no-cache-dir -r requirements-worker.txt

COPY . .

RUN mkdir -p /tmp/audio_processing /app/ml-models

CMD ["celery", "-A", "workers.celery_app", "worker", "--loglevel=info", "--pool=prefork", "--concurrency=1"]
